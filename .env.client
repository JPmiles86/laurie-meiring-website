# CLIENT DELIVERY MODE - Only Core Blog Features
# Use this file for client delivery by copying it to .env.local

# Deployment Mode
VITE_DEPLOYMENT_MODE=CLIENT_DELIVERY

# API Configuration
VITE_API_URL=http://localhost:3001/api

# Disable ALL AI Features for Client
VITE_ENABLE_AI_WRITING_ASSISTANT=false
VITE_ENABLE_AI_DRAFT_INTELLIGENCE=false
VITE_ENABLE_AI_IMAGE_GENERATION=false
VITE_ENABLE_AI_CRITIQUE_SYSTEM=false
VITE_ENABLE_AI_SUCCESS_PREDICTION=false
VITE_ENABLE_AI_LEARNING_INSIGHTS=false

# Disable Advanced Features
VITE_ENABLE_VERSION_CONTROL=false
VITE_ENABLE_PERFORMANCE_ANALYTICS=false
VITE_ENABLE_SOCIAL_MEDIA=false

# Enable Core Blog Features Only
VITE_ENABLE_BLOG_EDITOR=true
VITE_ENABLE_BLOG_MANAGEMENT=true
VITE_ENABLE_MEDIA_UPLOAD=true

# Disable Debug/Development Features
VITE_DEBUG_MODE=false
VITE_USE_MOCK_INTELLIGENCE=false

# Client-specific branding (optional)
VITE_CLIENT_MODE=true
VITE_HIDE_DEVELOPER_FEATURES=true